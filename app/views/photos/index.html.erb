<% if @photos.any? %>
  <% @photos.each do |photo| %>
    <h2> <%= photo.description %> </h2>
    <%= link_to image_tag(photo.image.url(:medium), class: "image medium"), photo_path(photo) %>
  <% end %>
<% else %>
  No photos yet!
<% end %>
<%= link_to "Upload a photo", new_photo_path, class: "button" %>
